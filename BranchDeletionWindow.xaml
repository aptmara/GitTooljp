<Window x:Class="SimplePRClient.BranchDeletionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ブランチ削除" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="削除するブランチを選択してください:" Grid.Row="0" Margin="0,0,0,5" FontWeight="Bold"/>

        <ListBox x:Name="BranchListBox" Grid.Row="1" SelectionMode="Extended"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="削除 (Delete)" Width="100" Click="DeleteButton_Click" Background="#FFE6E6" BorderBrush="#FFCCCC" Margin="0,0,10,0"/>
            <Button Content="キャンセル" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
