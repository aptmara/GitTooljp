<Window x:Class="SimplePRClient.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Msg" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptBlock" Text="Prompt:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" VerticalAlignment="Top" Padding="3"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Click="OkButton_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="60" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>