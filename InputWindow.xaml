<Window x:Class="SimplePRClient.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock x:Name="MessageText" Text="Message" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,10" x:FieldModifier="public"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Click="OkButton_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="70" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
